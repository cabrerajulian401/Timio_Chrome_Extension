{
  "manifest_version": 3,
  "name": "TIMIO Chrome - Early Access",
  "version": "1.4",
  "description": "Article insights extension",
  "background": {
    "service_worker": "backgroundSimplified.bundle.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "TIMIOCircle128.png"
  },
  "icons": {
    "16": "TIMIOCircle128.png",
    "32": "TIMIOCircle128.png",
    "48": "TIMIOCircle128.png",
    "128": "TIMIOCircle128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' ws://localhost:3000 https://identitytoolkit.googleapis.com https://*.firebaseapp.com https://*.googleapis.com https://serverfortimio.vercel.app;"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lottie.min.js",        
        "lottie-manager.js",   
        "content.bundle.js",    
        "Readability.js" 
      ],
      "css": ["content.styles.css"], 
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel", 
    "scripting"
  ],
  "host_permissions": ["https://serverfortimio.vercel.app/*", "<all_urls>"],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/animations/torch.json",
        "assets/animations/pivot.json",
        "Torch_Icon.png",    
        "Pivot_Icon.png",    
        "summarize-icon.png", 
        "content.styles.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}